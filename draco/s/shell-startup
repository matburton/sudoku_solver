cd Sudokus:
alias clear echo "*E[0;0H*E[J"
clear
echo "*E[33mSudoku solver build environment*E[0m"
alias endcli execute Sudokus:s/exit-sequence
run >NIL: c/clock INTERNAL 10 LEFT 364 TOP 0 BACKGROUND 2 FORMAT "%1Chip%3%G%|%1Fast%3%F%|%1Total%3%k"

; In-lined configure to avoid temporary files
alias configure execute configure
assign >NIL: exists Draco:
IF WARN
   echo ""
   echo "Insert the Draco disk into another drive"
   echo "Once inserted: *E[32mconfigure*E[0m"
   echo ""
ELSE
   path Draco:c add
   assign drinc: Draco:drinc
   assign drlib: Draco:drlib
   echo ""
   echo "To compile: *E[32mmake*E[0m"
   echo ""
   alias make execute make
ENDIF
assign >NIL: exists git:
IF NOT WARN
    cd git:
ENDIF

Prompt "%S> "
