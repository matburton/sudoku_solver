{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "msvc build",
        "type": "shell",
        "command": "cl.exe",
        // "/O2", "/Ot", "/Ob3", "/Oi", "/GL", - optimisations
        // "/Zi" - for debugging
        "args": ["/Zi", "/TC", "/W4", "/WX", "/MT", "/Fo:", "obj/", "/Fe:", "bin/sudoku_solver_console.exe", "src/sudoku_grid.c", "src/sudoku_solver.c", "src/sudoku_solver_console.c"],
        "presentation": {
          "reveal": "always"
        },
        "problemMatcher": "$msCompile"
      },
      {
        "label": "Create /bin",
        "command": "cmd",
        "args": ["/C", "if not exist bin mkdir bin"]
      },
      {
        "label": "Create /obj",
        "command": "cmd",
        "args": ["/C", "if not exist obj mkdir obj"]
      },
      {
        "label": "Build",
        "dependsOn": ["Create /obj", "Create /bin", "msvc build"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }