{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "msvc build",
        "type": "shell",
        "command": "cl.exe",
        "args": ["/O2", "/Ot", "/Ob3", "/Oi", "/GL", "/TC", "/W4", "/WX", "/GS-", "/Fo:", "obj/", "/Fe:", "bin/sudoku_solver_console.exe", "/DEBUG:NONE", "src/sudoku_grid.c", "src/sudoku_solver.c", "src/sudoku_printer.c", "src/sudoku_solver_console.c", "/link", "/ENTRY:main", "/MANIFEST:NO", "/DYNAMICBASE:NO", "/NODEFAULTLIB", "/SUBSYSTEM:CONSOLE", "/STACK:0x100000,0x100000", "kernel32.lib"],
        "presentation": {
          "reveal": "always"
        },
        "problemMatcher": "$msCompile"
      },
      {
        "label": "Create /bin",
        "command": "cmd",
        "args": ["/C", "if not exist bin mkdir bin"]
      },
      {
        "label": "Create /obj",
        "command": "cmd",
        "args": ["/C", "if not exist obj mkdir obj"]
      },
      {
        "label": "Build",
        "dependsOn": ["Create /obj", "Create /bin", "msvc build"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }